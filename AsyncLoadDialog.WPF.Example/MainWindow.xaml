<Window
    x:Class="AsyncLoadDialog.WPF.Example.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:AsyncLoadDialog.WPF.Example"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="400"
    Height="200"
    mc:Ignorable="d">
    <Grid>
        <StackPanel>

            <Button
                x:Name="OkCase"
                Width="100"
                Height=" 50"
                Click="OkCase_Click"
                Content="OkCase" />
            <Button
                x:Name="FailCase"
                Width="100"
                Height=" 50"
                Click="FailCase_Click"
                Content="FailCase" />
        </StackPanel>

    </Grid>
</Window>
